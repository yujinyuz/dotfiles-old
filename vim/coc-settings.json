{
  "python.jediEnabled": true,
  "python.jediPath": "~/.pyenv/versions/nvim/lib/python3.7/site-packages",
  "python.venvFolders": ["envs", ".pyenv"],
  "python.linting.enabled": true,
  "python.sortImports.path": "/Users/eugene/.pyenv/versions/nvim/bin/isort",
  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "json.enable": true,
  "json.format.enable": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "pairs.enableBackspace": true,
  "yank.enableCompletion": false,
  "diagnostic.displayByAle": false,
  "suggest.autoTrigger": "always"
}
