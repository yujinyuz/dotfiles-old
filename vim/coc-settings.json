{
  "python.jediEnabled": true,
  "python.jediPath": "~/.pyenv/versions/nvim/lib/python3.7/site-packages",
  "python.venvFolders": ["envs", ".pyenv"],
  "python.linting.enabled": true,
  "python.linting.pep8Args": [
    "--ignore=C0301,W0142,W0402,R0201,E1101,E1102,C0103,R0901,R0903,R0904,C1001,W0223,W0232,W0201,E1103,R0801,C0111",
    "--max-line-length=120"
  ],
  "python.sortImports.path": "/Users/eugene/.pyenv/versions/nvim/bin/isort",
  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "json.enable": true,
  "json.format.enable": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "pairs.enableBackspace": true,
  "yank.enableCompletion": false,
  "diagnostic.displayByAle": true,
  "diagnostic.enable": false,
  "diagnostic.virtualText": false,
  "suggest.autoTrigger": "always",
  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-p>",
  "list.maxHeight": 15,
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
}
